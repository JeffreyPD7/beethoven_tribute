//Pseudo Declare
@mixin pseudo($display: block, $pos: absolute, $content: '') {
    content: $content;
    display: $display;
    position: $pos;
}

//css-triangle
@mixin css-triangle($color, $direction, $size: 106px, $postition: absolute, $round: false) {
     @include pseudo;
    width: 0;
    height: 0;
    @if $round {
        border-radius: 3px;
    }
    @if $direction == down {
        border-left: $size solid transparent;
        border-right: $size solid transparent;
        border-top: $size solid $color;
        margin-top: 0 - round($size / 2.5);
    }
    @else if $direction == up {
        border-left: $size solid transparent;
        border-right: $size solid transparent;
        border-bottom: $size solid $color;
        margin-bottom: 0 - round($size / 2.5);
    }
    @else if $direction == right {
        border-top: $size solid transparent;
        border-bottom: $size solid transparent;
        border-left: $size solid $color;
        margin-right: - $size;
    }
    @else if $direction == left {
        border-top: $size solid transparent;
        border-bottom: $size solid transparent;
        border-right: $size solid $color;
        margin-left: -$size;
    }
}

//css-diamond
@mixin css-diamond($color, $size: 50px, $postition: absolute) {

  //Declaring Variables
    $top-diamond: null;
    $sides-diamond: null;
    $bottom-diamond: null;

    //Palletes
    @if $color == white {
        $top-diamond: #FAFAFA;
        $sides-diamond: #F5F5F5;
        $bottom-diamond: #EEEEEE;
    }
    @else if $color == mid-white {
        $top-diamond: #FAFAFA;
        $sides-diamond: #EEEEEE;
        $bottom-diamond: #BDBDBD;
    }

    @include pseudo;
    &:before {
        @include pseudo;
        box-shadow: $size $size $top-diamond, 0 $size $sides-diamond;
        width: $size;
        height: $size;
        transform: rotate(-45deg);
    }

    &:after {
        @include pseudo;
        box-shadow: ($size*2) (-$size) $sides-diamond, ($size*2) 0 $bottom-diamond;
        width: $size;
        height: $size;
        transform: rotate(45deg);
    }
}
